{
  "name": "@browser-ext/core",
  "version": "0.0.1",
  "description": "Vite-powered build system for browser extensions with automatic type inference",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "browser-ext": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup && yarn link && tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.0.0",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/chrome": "^0.0.287",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@types/chrome": "*",
    "typescript": ">=5.0.0"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "vite",
    "typescript",
    "manifest-v3",
    "hot-reload",
    "type-inference"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/browser-ext.git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=18"
  }
}